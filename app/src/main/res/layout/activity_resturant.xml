<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How would you rate the quality of the food?" />

        <RadioButton
            android:id="@+id/one_bad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bad" />

        <RadioButton
            android:id="@+id/one_mediocre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mediocre" />

        <RadioButton
            android:id="@+id/one_okay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Okay" />

        <RadioButton
            android:id="@+id/one_good"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Good" />

        <RadioButton
            android:id="@+id/one_amazing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Amazing" />

    </RadioGroup>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How would you rate the service?" />

        <RadioButton
            android:id="@+id/two_bad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bad" />

        <RadioButton
            android:id="@+id/two_mediocre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mediocre" />

        <RadioButton
            android:id="@+id/two_okay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Okay" />

        <RadioButton
            android:id="@+id/two_good"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Good" />

        <RadioButton
            android:id="@+id/two_amazing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Amazing" />

    </RadioGroup>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How would you rate the cleanliness of the establishment?" />

        <RadioButton
            android:id="@+id/three_bad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bad" />

        <RadioButton
            android:id="@+id/three_mediocre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mediocre" />

        <RadioButton
            android:id="@+id/three_okay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Okay" />

        <RadioButton
            android:id="@+id/three_good"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Good" />

        <RadioButton
            android:id="@+id/three_amazing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Amazing" />

    </RadioGroup>
</LinearLayout>