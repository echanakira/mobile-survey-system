<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1) How difficult was it to find what you were looking for?" />

        <RadioGroup
            android:id="@+id/one_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/one_not"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Not Difficult" />

            <RadioButton
                android:id="@+id/one_somewhat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Somewhat Difficult" />

            <RadioButton
                android:id="@+id/one_difficult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Difficult" />

        </RadioGroup>

        <TextView
            android:id="@+id/two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2) How would you rate the quality of the service?" />

        <RadioGroup
            android:id="@+id/two_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/two_bad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bad" />

            <RadioButton
                android:id="@+id/two_mediocre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mediocre" />

            <RadioButton
                android:id="@+id/two_okay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Okay" />

            <RadioButton
                android:id="@+id/two_good"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Good" />

            <RadioButton
                android:id="@+id/two_amazing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Amazing" />
        </RadioGroup>

        <TextView
            android:id="@+id/three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3)How would you rate the cleanliness of the store?" />

        <RadioGroup
            android:id="@+id/three_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/three_bad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bad" />

            <RadioButton
                android:id="@+id/three_mediocre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mediocre" />

            <RadioButton
                android:id="@+id/three_okay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Okay" />

            <RadioButton
                android:id="@+id/three_good"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Good" />

            <RadioButton
                android:id="@+id/three_amazing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Amazing" />
        </RadioGroup>

        <TextView
            android:id="@+id/four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4) How would you rate the atmosphere of the store?" />

        <RadioGroup
            android:id="@+id/four_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/four_bad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bad" />

            <RadioButton
                android:id="@+id/four_mediocre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mediocre" />

            <RadioButton
                android:id="@+id/four_okay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Okay" />

            <RadioButton
                android:id="@+id/four_good"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Good" />

            <RadioButton
                android:id="@+id/four_amazing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Amazing" />
        </RadioGroup>

        <TextView
            android:id="@+id/five"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5) Would you recommend this store to friends and family?" />

        <RadioGroup
            android:id="@+id/five_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <RadioButton
                android:id="@+id/five_yes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yes" />

            <RadioButton
                android:id="@+id/five_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No" />
        </RadioGroup>

        <TextView
            android:id="@+id/six"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6) If no, why not?" />

        <EditText
            android:id="@+id/six_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine" />

        <TextView
            android:id="@+id/seven"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Additional Comments" />

        <EditText
            android:id="@+id/seven_comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/Submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit" />


    </LinearLayout>
</ScrollView>
